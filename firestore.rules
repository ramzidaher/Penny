rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only access their own data
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Security events - only system can write, users can read their own
    match /security_events/{eventId} {
      allow read: if request.auth != null;
      allow write: if false; // Only functions can write
    }
    
    // Token exchange attempts - only system can write
    match /token_exchange_attempts/{attemptId} {
      allow read, write: if false; // Only functions can access
    }
    
    // Used OAuth codes - only system can write
    match /used_oauth_codes/{codeId} {
      allow read, write: if false; // Only functions can access
    }
  }
}

